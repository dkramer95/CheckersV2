<Window x:Class="CheckersGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersGUI"
        mc:Ignorable="d"
        Title="Checkers GUI" Height="700" Width="700" ResizeMode="NoResize">
    <Window.CommandBindings>
        <CommandBinding Command="New" Executed="MenuItem_Click"/>
    </Window.CommandBindings>
    <DockPanel x:Name="mainPanel">
        <Menu Height="20" DockPanel.Dock="Top" >
            <MenuItem Header="File">
                <MenuItem Command="New"/>
                <MenuItem Header="Exit" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
        <DockPanel x:Name="boardPanel"
                   Width="600"
                   Height="600"
                   Background="White"
                   LastChildFill="True">
        </DockPanel>
    </DockPanel>
</Window>
